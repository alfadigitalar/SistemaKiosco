{
  "name": "kubo-pos",
  "version": "1.0.0",
  "description": "Kubo POS - Modern Desktop POS System",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && electron-builder",
    "build:web": "vite build",
    "lint": "eslint ."
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "pos",
    "sqlite"
  ],
  "author": "Alfa Digital",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.11",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@afipsdk/afip.js": "^1.2.2",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "express": "^5.2.1",
    "ip": "^2.0.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.562.0",
    "node-forge": "^1.3.3",
    "nodemailer": "^7.0.12",
    "qrcode.react": "^4.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.11.0",
    "selfsigned": "^5.4.0",
    "socket.io": "^4.8.3",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0"
  },
  "build": {
    "appId": "com.kubopos.app",
    "productName": "Kubo POS",
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
